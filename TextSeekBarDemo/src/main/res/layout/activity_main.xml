<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"    
    tools:context=".MainActivity">

    <com.albertcbraun.textseekbarlib.TextSeekBarView
        android:id="@+id/text_seek_bar_view0"
        android:layout_width="500dp"
        custom:spacing="0"
        android:layout_height="wrap_content"
        />

    <com.albertcbraun.textseekbarlib.TextSeekBarView
        android:id="@+id/text_seek_bar_view1"
        android:layout_below="@id/text_seek_bar_view0"
        android:layout_width="500dp"
        android:layout_marginLeft="100dp"
        custom:spacing="100"
        android:layout_height="wrap_content" 
        />

    <com.albertcbraun.textseekbarlib.TextSeekBarView
        android:id="@+id/text_seek_bar_view2"
        android:layout_below="@id/text_seek_bar_view1"
        android:layout_width="500dp"
        android:layout_marginLeft="50dp"
        custom:spacing="0"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
